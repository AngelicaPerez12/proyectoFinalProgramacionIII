<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.proyectoprogra.controllers.RegisterController"
           stylesheets="Styles/login.css"
           styleClass="login-root">

    <children>
        <VBox styleClass="login-container" alignment="CENTER" spacing="14">
            <children>
                <VBox alignment="CENTER" spacing="6">
                    <children>
                        <Label text="Crear cuenta" styleClass="label title" wrapText="true" />
                        <Label text="Rellena los datos para crear tu cuenta" styleClass="subtle" wrapText="true" />
                    </children>
                </VBox>

                <VBox styleClass="card" spacing="12" alignment="CENTER">
                    <children>
                        <GridPane hgap="8" vgap="8" alignment="CENTER">
                            <children>
                                <Label text="Nombre completo" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                                <TextField fx:id="campoNombreReg" promptText="Nombre completo" styleClass="input-field" GridPane.rowIndex="1" GridPane.columnIndex="0" />

                                <Label text="Correo electrónico" styleClass="form-label" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                                <TextField fx:id="campoEmailReg" promptText="nombre@ejemplo.com" styleClass="input-field" GridPane.rowIndex="3" GridPane.columnIndex="0" />

                                <Label text="Contraseña" styleClass="form-label" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                                <PasswordField fx:id="campoContrasenaReg" promptText="Contraseña" styleClass="input-field" GridPane.rowIndex="5" GridPane.columnIndex="0" />

                                <Label text="Confirmar contraseña" styleClass="form-label" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                                <PasswordField fx:id="campoContrasenaRegConfirm" promptText="Confirmar contraseña" styleClass="input-field" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                            </children>
                        </GridPane>

                        <HBox spacing="12" alignment="CENTER">
                            <children>
                                <Button fx:id="btnCrearCuentaReg" text="Crear cuenta" onAction="#registrarUsuario" styleClass="btn-secondary" />
                                <Button fx:id="btnCancelarReg" text="Cancelar" onAction="#cerrar" styleClass="btn-secondary" />
                            </children>
                        </HBox>

                        <Label fx:id="mensajeReg" styleClass="message-label subtle" wrapText="true" />
                    </children>

                    <padding>
                        <Insets top="14" right="14" bottom="14" left="14" />
                    </padding>
                </VBox>

            </children>
        </VBox>
    </children>
</StackPane>

