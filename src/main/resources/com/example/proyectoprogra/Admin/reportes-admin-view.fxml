<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800" prefWidth="1200" stylesheets="@../css/dashadmin.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyectoprogra.controllers.Admin.ReportesAdminController">

    <!-- Ãrea principal -->
    <VBox spacing="15" style="-fx-padding: 20;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Reportes: Pedidos Listos y Entregados" />
      <Button mnemonicParsing="false" onAction="#convertirpdf" prefHeight="25.0" prefWidth="168.0" text="Exportar En Formato PDF" />
      <Button mnemonicParsing="false" onAction="#convertirexcel" prefHeight="25.0" prefWidth="167.0" text="Exportar En Formato Excel" />

        <TableView fx:id="tablaReportes" prefHeight="568.0" prefWidth="1085.0" VBox.vgrow="ALWAYS">

            <columns>
                <TableColumn fx:id="colIdPedido" prefWidth="70" text="ID" />
                <TableColumn fx:id="colCliente" prefWidth="140" text="Cliente" />
                <TableColumn fx:id="colFechaPedido" prefWidth="150" text="Fecha Pedido" />
                <TableColumn fx:id="colFechaEntrega" prefWidth="150" text="Fecha Entrega" />
                <TableColumn fx:id="colEstado" prefWidth="120" text="Estado" />
                <TableColumn fx:id="colPastel" prefWidth="200" text="Pastel" />
                <TableColumn fx:id="colCantidad" prefWidth="70" text="Cant." />
                <TableColumn fx:id="colPrecio" prefWidth="100" text="Precio" />
                <TableColumn fx:id="colTotal" prefWidth="100" text="Total" />
            </columns>

        </TableView>

    </VBox>

</AnchorPane>
