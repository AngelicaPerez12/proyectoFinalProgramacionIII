<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<!-- 
    ROOT CONTAINER
    - StackPane: Permite apilar elementos uno sobre otro
    - styleClass: Aplica estilos CSS definidos en bienvenida.css
    - Controller: BienvenidaController maneja la lógica de eventos
-->
<StackPane fx:id="rootPane" styleClass="welcome-root" stylesheets="@../Styles/bienvenida.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyectoprogra.controllers.Visualizacion.BienvenidaController">

    <!-- 
        IMAGEN DE FONDO
        - ImageView: Muestra imagen de fondo
        - opacity: 0.2 para que sea muy sutil y no compita con el gradiente
        - fitWidth/fitHeight: 2000px para cubrir toda la pantalla
        - preserveRatio: false para estirar la imagen
    -->
    <ImageView fx:id="fondo" opacity="0.2" preserveRatio="false" fitWidth="2000" fitHeight="2000">
        <image>
            <!-- Ruta a la imagen de fondo -->
            <Image url="@../Imagenes/0c307cdc084ef4ded42fb60948a61627.jpg" />
        </image>
    </ImageView>

    <!-- 
        OVERLAY OSCURO
        - StackPane vacío con clase CSS "overlay"
        - Crea una capa oscura semitransparente (30% negro)
        - Mejora el contraste del texto blanco
    -->
    <StackPane styleClass="overlay" />

    <!-- 
        CÍRCULOS DECORATIVOS
        - 3 círculos semitransparentes
        - translateX/Y: Posicionan los círculos en diferentes lugares
        - radius: Tamaño de cada círculo
        - Crean profundidad y dinamismo visual
    -->
    <!-- Círculo superior izquierdo -->
    <Circle radius="150" translateX="-300" translateY="-200" styleClass="decoration-circle" />
    
    <!-- Círculo inferior derecho -->
    <Circle radius="200" translateX="350" translateY="250" styleClass="decoration-circle" />
    
    <!-- Círculo inferior izquierdo -->
    <Circle radius="100" translateX="-400" translateY="300" styleClass="decoration-circle" />

    <!-- 
        CONTENIDO PRINCIPAL
        - VBox: Layout vertical que organiza elementos en columna
        - alignment: CENTER centra todo el contenido
        - spacing: 40px entre cada elemento
        - maxWidth: 800px limita el ancho máximo
    -->
    <VBox alignment="CENTER" spacing="40" maxWidth="800">
        <!-- 
            PADDING DEL CONTENEDOR
            - top/bottom: 60px espacio vertical
            - left/right: 40px espacio horizontal
        -->
        <padding>
            <Insets top="60" bottom="60" left="40" right="40" />
        </padding>

        <!-- 
            TÍTULO PRINCIPAL
            - Label con texto "SWEET HARMONY"
            - styleClass: welcome-title (96px, blanco, sombra profunda)
            - wrapText: Permite que el texto se ajuste en pantallas pequeñas
        -->
        <Label text="SWEET HARMONY" styleClass="welcome-title" wrapText="true" />

        <!-- 
            ICONO DEL PASTEL
            - ImageView: Muestra el icono del pastel
            - fitHeight/Width: 80px tamaño del icono
            - preserveRatio: Mantiene las proporciones
            - styleClass: cake-icon floating (efecto glow y animación)
        -->
        <ImageView fitHeight="80" fitWidth="80" preserveRatio="true" styleClass="cake-icon floating">
            <image>
                <!-- Ruta al icono del pastel -->
                <Image url="@../Imagenes/cake.png" />
            </image>
        </ImageView>

        <!-- 
            SUBTÍTULO
            - Label con descripción del negocio
            - styleClass: welcome-subtitle (24px, blanco, ligero)
            - textAlignment: CENTER centra el texto
            - maxWidth: 600px limita el ancho para mejor legibilidad
        -->
        <Label text="Descubre Nuestros Pasteles Y Sus Sorprendentes Sabores" styleClass="welcome-subtitle" wrapText="true" textAlignment="CENTER" maxWidth="600" />

        <!-- 
            ESPACIADOR
            - VBox vacío de 20px de altura
            - Crea separación visual entre subtítulo y botones
        -->
        <VBox prefHeight="20" />

        <!-- 
            CONTENEDOR DE BOTONES
            - VBox: Organiza botones verticalmente
            - styleClass: button-container
            - spacing: 20px entre botones
            - alignment: CENTER centra los botones
        -->
        <VBox styleClass="button-container" spacing="20" alignment="CENTER">
            <!-- 
                BOTÓN PRIMARIO: INICIAR SESIÓN
                - fx:id: btnIniciarSesion (referencia en el controller)
                - text: Texto del botón
                - styleClass: btn-welcome-primary (blanco, texto purple)
                - onAction: Método del controller que se ejecuta al hacer click
            -->
            <Button fx:id="btnIniciarSesion" text="INICIAR SESIÓN" styleClass="btn-welcome-primary" onAction="#entrarallogin" />
            
            <!-- 
                BOTÓN SECUNDARIO: REGISTRARSE
                - fx:id: btnentrar (referencia en el controller)
                - text: Texto del botón
                - styleClass: btn-welcome-secondary (outline blanco)
                - onAction: Método del controller para abrir registro
            -->
            <Button fx:id="btnentrar" text="Regístrate Ahora" styleClass="btn-welcome-secondary" onAction="#abrirRegistro" />
        </VBox>

        <!-- 
            ESPACIADOR INFERIOR
            - VBox vacío de 40px de altura
            - Crea separación antes del botón de salir
        -->
        <VBox prefHeight="40" />

        <!-- 
            BOTÓN SALIR
            - text: "SALIR"
            - styleClass: btn-exit (pequeño, discreto)
            - onAction: Método para cerrar la aplicación
        -->
        <Button text="SALIR" styleClass="btn-exit" onAction="#CerrarSesion" />
    </VBox>

</StackPane>

<!-- 
    NOTAS TÉCNICAS:
    
    1. ESTRUCTURA:
       - StackPane permite apilar capas (fondo, overlay, círculos, contenido)
       - VBox organiza el contenido verticalmente de forma responsive
    
    2. ESTILOS:
       - Todos los estilos están en bienvenida.css
       - No hay estilos inline para mejor mantenibilidad
    
    3. GRADIENTE DE FONDO:
       - Definido en CSS: Amber → Rose → Purple
       - Crea un efecto visual impactante
    
    4. EFECTOS INTERACTIVOS:
       - Hover en botones: scale 1.05
       - Press en botones: translate-y 2px
       - Definidos en CSS
    
    5. RESPONSIVE:
       - VBox se adapta al tamaño de ventana
       - maxWidth limita el ancho en pantallas grandes
       - wrapText permite ajuste de texto
-->
