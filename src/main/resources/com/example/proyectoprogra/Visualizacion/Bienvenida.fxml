<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.proyectoprogra.controllers.Visualizacion.BienvenidaController">

    <!-- Fondo FULL SCREEN (JavaFX 21 compatible) -->
    <ImageView fx:id="fondo"
               preserveRatio="false"
               opacity="0.6">
        <image>
            <Image url="@../Imagenes/0c307cdc084ef4ded42fb60948a61627.jpg"/>
        </image>
        <effect>
            <Glow/>
        </effect>
    </ImageView>

    <AnchorPane AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">

        <!-- Título -->
        <Label text="SWEET HARMONY" textFill="#593535"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
               AnchorPane.topAnchor="80"
               style="-fx-alignment: center;">
            <font>
                <Font name="Book Antiqua" size="90"/>
            </font>
            <effect>
                <DropShadow/>
            </effect>
        </Label>

        <!-- Icono -->
        <StackPane AnchorPane.topAnchor="170"
                   AnchorPane.leftAnchor="0"
                   AnchorPane.rightAnchor="0">
            <ImageView fitHeight="45" fitWidth="45" preserveRatio="true">
                <image>
                    <Image url="@../Imagenes/cake.png"/>
                </image>
            </ImageView>
        </StackPane>

        <!-- Subtítulo -->
        <Label text="Descubre Nuestros Pasteles Y Sus Sorprendentes Sabores"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
               AnchorPane.topAnchor="250"
               textFill="#533e3e"
               style="-fx-alignment: center;">
            <font>
                <Font name="Juice ITC" size="24"/>
            </font>
        </Label>

        <!-- Botón Iniciar Sesión -->
        <Button fx:id="btnIniciarSesion"
                text="INICIAR SESIÓN!!!"
                onAction="#entrarallogin"
                style="-fx-background-color: transparent; -fx-font-size: 20px;"
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                AnchorPane.topAnchor="330"/>

        <!-- Botón Registro -->
        <Button fx:id="btnentrar"
                text="Regístrate Ahora!!!"
                onAction="#abrirRegistro"
                style="-fx-background-color: transparent; -fx-font-size: 20px;"
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                AnchorPane.topAnchor="390"/>

        <!-- Botón Cerrar Sesión -->
        <Button text="CERRAR SESIÓN"
                onAction="#CerrarSesion"
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                AnchorPane.bottomAnchor="30"
                style="-fx-font-size: 20px; -fx-padding: 10px;"/>
    </AnchorPane>

</StackPane>
