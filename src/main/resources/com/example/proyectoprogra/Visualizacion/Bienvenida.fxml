<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.proyectoprogra.controllers.Visualizacion.BienvenidaController">

    <!-- FONDO 100% RESPONSIVO -->
    <ImageView id="fondo"
               preserveRatio="false"
               fitWidth="1920"
               fitHeight="1080"
               opacity="0.6">
        <image>
            <Image url="@../Imagenes/0c307cdc084ef4ded42fb60948a61627.jpg"/>
        </image>
        <effect>
            <Glow/>
        </effect>
    </ImageView>

    <!-- CAPA DE CONTENIDO (CENTRADA AUTOMÁTICAMENTE) -->
    <AnchorPane prefWidth="1000" prefHeight="600">

        <!-- Título centrado -->
        <Label text="SWEET HARMONY"
               textFill="#593535"
               AnchorPane.topAnchor="80"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0"
               style="-fx-alignment: center;">
            <font>
                <Font name="Book Antiqua" size="90"/>
            </font>
            <effect>
                <DropShadow/>
            </effect>
        </Label>


        <StackPane AnchorPane.topAnchor="170"
                   AnchorPane.leftAnchor="0"
                   AnchorPane.rightAnchor="0">

            <ImageView fitHeight="45" fitWidth="45"
                       preserveRatio="true">
                <image>
                    <Image url="@../Imagenes/cake.png"/>
                </image>
            </ImageView>

        </StackPane>

        <!-- Subtítulo centrado -->
        <Label text="Descubre Nuestros Pasteles Y Sus Sorprendentes Sabores"
               textFill="#533e3e"
               AnchorPane.topAnchor="250"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0"
               style="-fx-alignment: center;">
            <font>
                <Font name="Juice ITC" size="24"/>
            </font>
        </Label>

        <!-- Botón centrado -->
        <Button fx:id="btnentrar"
                text="Registrate Ahora!!!"
                underline="true"
                onAction="#entrarallogin"
                AnchorPane.topAnchor="350"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                style="-fx-background-color: transparent; -fx-font-size: 20px; -fx-alignment: center;">
            <font>
                <Font name="System Bold Italic" size="20"/>
            </font>
            <effect>
                <Reflection/>
            </effect>
        </Button>

    </AnchorPane>

</StackPane>