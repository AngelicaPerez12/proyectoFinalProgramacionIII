<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectoprogra.controllers.Cliente.HistorialClienteController"
            stylesheets="@../css/historial-cliente.css">

    <!-- Contenido principal -->
    <center>
        <VBox spacing="35" alignment="TOP_CENTER">
            <padding>
                <Insets top="50" left="60" right="60" bottom="50"/>
            </padding>

            <!-- TÃ­tulo -->
            <VBox alignment="CENTER" spacing="14">
                <Label text="Mi Historial" styleClass="bakery-title-large" />
                <Label text="Revisa todos tus pedidos anteriores" styleClass="bakery-subtitle-large" />
            </VBox>

            <!-- Card con tabla -->
            <VBox styleClass="bakery-card" spacing="25" alignment="CENTER">
                <padding>
                    <Insets top="35" bottom="35" left="35" right="35"/>
                </padding>

                <TableView fx:id="tablaHistorial"
                           prefHeight="450"
                           prefWidth="900"
                           style="-fx-background-color: white; -fx-background-radius: 10;">

                    <columns>
                        <TableColumn fx:id="colIdPedido" text="ID Pedido" prefWidth="90" />
                        <TableColumn fx:id="colFechaPedido" text="Fecha Pedido" prefWidth="130" />
                        <TableColumn fx:id="colFechaEntrega" text="Fecha Entrega" prefWidth="130" />
                        <TableColumn fx:id="colEstado" text="Estado" prefWidth="110" />
                        <TableColumn fx:id="colPastel" text="Pastel" prefWidth="160" />
                        <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="90" />
                        <TableColumn fx:id="colPrecio" text="Precio" prefWidth="90" />
                        <TableColumn fx:id="colTotal" text="Total" prefWidth="90" />
                        <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="120" />
                    </columns>

                </TableView>

            </VBox>

        </VBox>
    </center>

</BorderPane>
