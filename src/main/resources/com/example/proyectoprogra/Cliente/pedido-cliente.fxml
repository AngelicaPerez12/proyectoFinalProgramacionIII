<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectoprogra.controllers.Cliente.PedidoClienteController"
            stylesheets="@../css/pedido-cliente.css">

    <!-- Contenido sin navbar -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="bakery-scroll">
            <VBox spacing="35" alignment="TOP_CENTER" styleClass="bakery-form-spacing-large">
                <padding>
                    <Insets top="50" left="60" right="60" bottom="50"/>
                </padding>

                <!-- Título -->
                <VBox alignment="CENTER" spacing="18">
                    <Label text="Realizar Pedido Personalizado" styleClass="bakery-title-large" />
                    <Label text="Completa los detalles de tu pastel perfecto" styleClass="bakery-subtitle-large" />
                    <VBox styleClass="bakery-divider" prefHeight="2" prefWidth="320"/>
                </VBox>

                <!-- Card del formulario -->
                <VBox styleClass="bakery-card-large" spacing="25" alignment="CENTER" prefWidth="600">
                    <padding>
                        <Insets top="40" bottom="40" left="50" right="50"/>
                    </padding>

                    <!-- Información de contacto -->
                    <VBox spacing="20" alignment="CENTER_LEFT">
                        <Label text="1. Información de Contacto" styleClass="bakery-title" style="-fx-font-size: 18px;"/>

                        <VBox spacing="8" alignment="CENTER_LEFT" styleClass="bakery-form-group">
                            <Label text="Nombre Completo *" styleClass="bakery-label" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                            <TextField fx:id="txtnombrecliente"
                                       styleClass="bakery-input-large"
                                       prefWidth="500"
                                       promptText="Ingresa tu nombre completo"/>
                        </VBox>

                        <VBox spacing="8" alignment="CENTER_LEFT" styleClass="bakery-form-group">
                            <Label text="Correo Electrónico *" styleClass="bakery-label" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                            <TextField fx:id="txtcorreocliente"
                                       styleClass="bakery-input-large"
                                       prefWidth="500"
                                       promptText="ejemplo@correo.com"/>
                        </VBox>
                    </VBox>

                    <VBox styleClass="bakery-divider" prefHeight="2" />

                    <!-- Detalles del pastel -->
                    <VBox spacing="20" alignment="CENTER_LEFT">
                        <Label text="2. Detalles del Pastel" styleClass="bakery-title" style="-fx-font-size: 18px;"/>

                        <VBox spacing="8" alignment="CENTER_LEFT" styleClass="bakery-form-group">
                            <Label text="Tipo de Pastel *" styleClass="bakery-label" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                            <ComboBox fx:id="cmbtipodepasteles"
                                      styleClass="bakery-input-large"
                                      prefWidth="500"
                                      promptText="Selecciona el tipo de pastel"/>
                        </VBox>

                        <VBox spacing="8" alignment="CENTER_LEFT" styleClass="bakery-form-group">
                            <Label text="Tamaño *" styleClass="bakery-label" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                            <ComboBox fx:id="cmbtamañopasteles"
                                      styleClass="bakery-input-large"
                                      prefWidth="500"
                                      promptText="Selecciona el tamaño"/>
                            <Label text="Pequeño (6-8 personas) | Mediano (10-12 personas) | Grande (15-20 personas)"
                                   styleClass="bakery-label"
                                   style="-fx-font-size: 11px; -fx-text-fill: #4A4A4A; -fx-opacity: 0.7;"/>
                        </VBox>
                        <VBox spacing="8" alignment="CENTER_LEFT" styleClass="bakery-form-group">
                            <Label text="Sabor del Pastel *" styleClass="bakery-label" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                            <ComboBox fx:id="cmbsaborpastel"
                                      styleClass="bakery-input-large"
                                      prefWidth="500"
                                      promptText="Selecciona el sabor"/>
                        </VBox>

                        <VBox spacing="8" alignment="CENTER_LEFT" styleClass="bakery-form-group">
                            <Label text="Fecha de Entrega *" styleClass="bakery-label" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                            <DatePicker fx:id="dtfechadeentrega"
                                        styleClass="bakery-input-large"
                                        prefWidth="500"
                                        promptText="Selecciona la fecha"/>
                            <Label text="Pedidos con mínimo 48 horas de anticipación"
                                   styleClass="bakery-label"
                                   style="-fx-font-size: 11px; -fx-text-fill: #E8C7C8; -fx-font-weight: bold;"/>
                        </VBox>
                    </VBox>

                    <VBox styleClass="bakery-divider" prefHeight="2" />

                    <!-- Personalización -->
                    <VBox spacing="20" alignment="CENTER_LEFT">
                        <Label text="3. Personalización (Opcional)" styleClass="bakery-title" style="-fx-font-size: 18px;"/>

                        <VBox spacing="8" alignment="CENTER_LEFT" styleClass="bakery-form-group">
                            <Label text="Descripción Personalizada" styleClass="bakery-label" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                            <TextArea fx:id="txtdescripcionpersonalizada"
                                      styleClass="bakery-input-large"
                                      prefWidth="500"
                                      prefHeight="100"
                                      wrapText="true"
                                      promptText="Describe cualquier detalle especial: colores, decoración, mensaje, alergias, etc."/>
                            <Label text="Máximo 200 caracteres"
                                   styleClass="bakery-label"
                                   style="-fx-font-size: 11px; -fx-text-fill: #4A4A4A; -fx-opacity: 0.7;"/>
                        </VBox>
                    </VBox>

                    <VBox styleClass="bakery-divider" prefHeight="2" />

                    <!-- Resumen -->
                    <VBox spacing="20" alignment="CENTER">

                        <VBox alignment="CENTER" spacing="10"
                              style="-fx-background-color: rgba(232, 199, 200, 0.15);
                                     -fx-background-radius: 10;
                                     -fx-padding: 15;">
                            <Label text="Importante" styleClass="bakery-label" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                            <Label text="Todos los campos marcados con * son obligatorios"
                                   styleClass="bakery-label"
                                   style="-fx-font-size: 12px;"
                                   textAlignment="CENTER"
                                   wrapText="true"/>
                            <Label text="Recibirás una confirmación por correo electrónico"
                                   styleClass="bakery-label"
                                   style="-fx-font-size: 12px;"
                                   textAlignment="CENTER"
                                   wrapText="true"/>
                        </VBox>

                        <Button fx:id="btnconfirmarpedido"
                                text="CONFIRMAR PEDIDO"
                                styleClass="bakery-button-large"
                                prefWidth="400"
                                prefHeight="65"
                                onAction="#confirmarpedido"
                                style="-fx-font-size: 18px;"/>

                        <Button text="Cancelar"
                                styleClass="bakery-button-secondary"
                                prefWidth="200"
                                prefHeight="45"
                                onAction="#vercatalogo"/>
                    </VBox>

                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
