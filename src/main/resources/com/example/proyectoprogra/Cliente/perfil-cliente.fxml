<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectoprogra.controllers.Cliente.PerfilClienteController"
            styleClass="bakery-background"
            stylesheets="@../Styles/bakery-theme.css,@../Styles/responsive.css">

    <center>
        <ScrollPane fitToWidth="true" pannable="true" hbarPolicy="NEVER">
            <content>
                <VBox spacing="30" alignment="TOP_CENTER">
                    <padding>
                        <Insets top="40" left="50" right="50" bottom="40"/>
                    </padding>

                    <VBox alignment="CENTER" spacing="10">
                        <Label text="Mi Perfil" styleClass="bakery-title-large" />
                        <Label text="Gestiona tu información personal" styleClass="bakery-subtitle-large" />
                    </VBox>


                    <VBox styleClass="bakery-card-large" spacing="25" alignment="CENTER">
                        <padding>
                            <Insets top="40" bottom="40" left="50" right="50"/>
                        </padding>

                        <GridPane hgap="20" vgap="22" alignment="CENTER">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" minWidth="150"/>
                                <ColumnConstraints halignment="LEFT" minWidth="300"/>
                            </columnConstraints>

                            <Label text="Nombre:" styleClass="bakery-label" style="-fx-font-size: 16px;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtNombre" styleClass="bakery-input-large" prefWidth="300" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Apellido:" styleClass="bakery-label" style="-fx-font-size: 16px;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtApellido" styleClass="bakery-input-large" prefWidth="300" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Correo:" styleClass="bakery-label" style="-fx-font-size: 16px;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtCorreo" styleClass="bakery-input-large" prefWidth="300" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                            <Label text="Contraseña:" styleClass="bakery-label" style="-fx-font-size: 16px;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <PasswordField fx:id="txtPassword" styleClass="bakery-input-large" prefWidth="300" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                            <Label text="Rol:" styleClass="bakery-label" style="-fx-font-size: 16px;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtRol" styleClass="bakery-input-large" prefWidth="300" editable="false" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                        </GridPane>

                        <VBox styleClass="bakery-divider" prefHeight="2" />

                        <HBox spacing="25" alignment="CENTER">
                            <Button text="GUARDAR CAMBIOS"
                                    onAction="#guardarCambios"
                                    styleClass="bakery-button-large"
                                    prefWidth="220"
                                    prefHeight="60"/>

                            <Button text="CERRAR SESIÓN"
                                    onAction="#cerrarSesion"
                                    styleClass="bakery-button-secondary"
                                    style="-fx-min-height: 55px;"
                                    prefWidth="220"
                                    prefHeight="60"/>
                        </HBox>

                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
