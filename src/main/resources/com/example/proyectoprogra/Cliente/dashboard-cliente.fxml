<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectoprogra.controllers.Cliente.DashboardClienteController"
            styleClass="bakery-background" stylesheets="@../Styles/bakery-theme.css,@../Styles/responsive.css"
            prefHeight="700" prefWidth="1000">

    <!-- Navbar Consistente -->
    <HBox styleClass="navbar-web"
          alignment="CENTER"
          prefHeight="60"
          spacing="20"
          AnchorPane.topAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <padding>
            <Insets left="20" right="20"/>
        </padding>

        <!-- Spacer izquierdo -->
        <Region HBox.hgrow="ALWAYS"/>

        <!-- Logo/Marca CENTRADO -->
        <Label text="SWEET HARMONY" styleClass="navbar-logo"/>

        <!-- Spacer derecho -->
        <Region HBox.hgrow="ALWAYS"/>

        <!-- Botones de Navegación a la DERECHA -->
        <HBox spacing="8" alignment="CENTER_RIGHT">
            <Button text="Catálogo" styleClass="navbar-button" onAction="#vercatalogo"/>
            <Button text="Hacer Pedido" styleClass="navbar-button" onAction="#hacerpedido"/>
            <Button text="Historial" styleClass="navbar-button" onAction="#historial"/>
            <Button text="Perfil" styleClass="navbar-button" onAction="#perfil"/>
        </HBox>
    </HBox>

    <!-- Contenido principal -->
    <VBox alignment="CENTER" spacing="40"
          AnchorPane.topAnchor="90"
          AnchorPane.bottomAnchor="50"
          AnchorPane.leftAnchor="50"
          AnchorPane.rightAnchor="50">

        <!-- Título principal -->
        <VBox alignment="CENTER" spacing="15">
            <Label text="Sweet Harmony" styleClass="bakery-title-large" />
            <Label text="Pastelería Artesanal Premium" styleClass="bakery-subtitle-large" />
        </VBox>

        <!-- Descripción -->
        <VBox alignment="CENTER" spacing="10">
            <Label text="Ofreciéndote siempre lo mejor en sabores" styleClass="bakery-subtitle" style="-fx-font-size: 20px;" />
            <Label text="Cada pastel es una obra de arte hecha con amor" styleClass="bakery-label" style="-fx-font-size: 16px;" />
        </VBox>

        <!-- Botones de acción principales -->
        <HBox alignment="CENTER" spacing="40">
            <Button text="VER CATÁLOGO"
                    onAction="#vercatalogo"
                    styleClass="bakery-button-large"
                    prefWidth="250" prefHeight="70" />

            <Button text="REALIZAR PEDIDO"
                    onAction="#hacerpedido"
                    styleClass="bakery-button-large"
                    prefWidth="250" prefHeight="70" />
        </HBox>

        <!-- Features -->
        <HBox alignment="CENTER" spacing="50">
            <VBox alignment="CENTER" spacing="10" prefWidth="200">
                <Label text="50+" styleClass="bakery-title" style="-fx-font-size: 48px; -fx-text-fill: #E8C7C8;" />
                <Label text="Sabores" styleClass="bakery-label" style="-fx-font-size: 16px;" />
            </VBox>

            <VBox alignment="CENTER" spacing="10" prefWidth="200">
                <Label text="100%" styleClass="bakery-title" style="-fx-font-size: 48px; -fx-text-fill: #E8C7C8;" />
                <Label text="Personalización" styleClass="bakery-label" style="-fx-font-size: 16px;" />
            </VBox>

            <VBox alignment="CENTER" spacing="10" prefWidth="200">
                <Label text="24/7" styleClass="bakery-title" style="-fx-font-size: 48px; -fx-text-fill: #E8C7C8;" />
                <Label text="Entrega Rápida" styleClass="bakery-label" style="-fx-font-size: 16px;" />
            </VBox>
        </HBox>

    </VBox>

</AnchorPane>