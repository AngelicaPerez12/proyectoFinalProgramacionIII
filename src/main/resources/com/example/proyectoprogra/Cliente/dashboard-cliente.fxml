<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="rootPane"
            fx:controller="com.example.proyectoprogra.controllers.Cliente.DashboardClienteController"
            stylesheets="@../css/dashboard-cliente.css"
            prefHeight="700" prefWidth="1000">

    <!-- NAVBAR (child 0) -->
    <HBox fx:id="navbar"
          styleClass="navbar-web"
          alignment="CENTER"
          prefHeight="70"
          spacing="24"
          AnchorPane.topAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <padding>
            <Insets left="40" right="40"/>
        </padding>

        <Region HBox.hgrow="ALWAYS"/>

        <Label text="SWEET HARMONY" styleClass="navbar-logo"/>

        <Region HBox.hgrow="ALWAYS"/>

        <HBox spacing="12" alignment="CENTER_RIGHT">
            <Button text="Inicio" styleClass="navbar-button" onAction="#regresarDashboard"/>
            <Button text="Catálogo" styleClass="navbar-button" onAction="#vercatalogo"/>
            <Button text="Hacer Pedido" styleClass="navbar-button" onAction="#hacerpedido"/>
            <Button text="Historial" styleClass="navbar-button" onAction="#historial"/>
            <Button text="Perfil" styleClass="navbar-button" onAction="#perfil"/>
        </HBox>
    </HBox>

    <!-- ÁREA DINÁMICA: aquí se reemplazan las vistas -->
    <AnchorPane fx:id="contentArea"
                AnchorPane.topAnchor="70"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                AnchorPane.bottomAnchor="0">

        <!-- inicioContent ahora es ANCHORPANE para coincidir con el controlador -->
        <AnchorPane fx:id="inicioContent"
                    AnchorPane.topAnchor="0"
                    AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0"
                    AnchorPane.bottomAnchor="0">

            <!-- Contenido inicial dentro del AnchorPane -->
            <VBox alignment="CENTER"
                  spacing="50"
                  AnchorPane.topAnchor="40"
                  AnchorPane.leftAnchor="60"
                  AnchorPane.rightAnchor="60">

                <VBox alignment="CENTER" spacing="18">
                    <Label text="Sweet Harmony" styleClass="bakery-title-large" />
                    <Label text="Pastelería Artesanal Premium" styleClass="bakery-subtitle-large" />
                </VBox>

                <VBox alignment="CENTER" spacing="12">
                    <Label text="Ofreciéndote siempre lo mejor en sabores" styleClass="bakery-subtitle" style="-fx-font-size: 19px;" />
                    <Label text="Cada pastel es una obra de arte hecha con amor" styleClass="bakery-label" style="-fx-font-size: 15px; -fx-opacity: 0.8;" />
                </VBox>

                <HBox alignment="CENTER" spacing="30">
                    <Button text="VER CATÁLOGO"
                            onAction="#vercatalogo"
                            styleClass="bakery-button-large"
                            prefWidth="240" prefHeight="65" />

                    <Button text="REALIZAR PEDIDO"
                            onAction="#hacerpedido"
                            styleClass="bakery-button-large"
                            prefWidth="240" prefHeight="65" />
                </HBox>

                <HBox alignment="CENTER" spacing="60">
                    <VBox alignment="CENTER" spacing="12" prefWidth="200">
                        <Label text="50+" styleClass="bakery-title" style="-fx-font-size: 52px; -fx-text-fill: #E8C7C8; -fx-font-weight: 700;" />
                        <Label text="Sabores" styleClass="bakery-label" style="-fx-font-size: 15px;" />
                    </VBox>

                    <VBox alignment="CENTER" spacing="12" prefWidth="200">
                        <Label text="100%" styleClass="bakery-title" style="-fx-font-size: 52px; -fx-text-fill: #E8C7C8; -fx-font-weight: 700;" />
                        <Label text="Personalización" styleClass="bakery-label" style="-fx-font-size: 15px;" />
                    </VBox>

                    <VBox alignment="CENTER" spacing="12" prefWidth="200">
                        <Label text="24/7" styleClass="bakery-title" style="-fx-font-size: 52px; -fx-text-fill: #E8C7C8; -fx-font-weight: 700;" />
                        <Label text="Entrega Rápida" styleClass="bakery-label" style="-fx-font-size: 15px;" />
                    </VBox>
                </HBox>

            </VBox>

        </AnchorPane>

    </AnchorPane>

</AnchorPane>
